generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum ShirtSize {
  xs
  s
  m
  l
  xl
  xxl
}

enum ShirtMaterial {
  polyester
  cotton
  triblend
}

enum ShirtFinish {
  smooth
  textured
}

enum ShirtColor {
  black
  blue
  rose
}

model Configuration {
  id String @id @default(cuid())
  width Int
  height Int
  imgUrl String
  size ShirtSize?
  material ShirtMaterial?
  finish ShirtFinish?
  color ShirtColor?
  croppedImgUrl String?
}
